# Configuración del proyecto
PROJECT_NAME=tp-redis-devops

# Configuración de puertos
API_PORT=8000
WEB_PORT=8081

# Configuración de la base de datos PostgreSQL
DB_NAME=tp_redis_db
DB_USER=postgres
DB_PASSWORD=postgres123

# Configuración de Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Configuración del API URL
# Para desarrollo local (Docker Compose)
API_URL=http://api:8000

# Para producción en Render, usar:
# API_URL=https://tp-redis-api.onrender.com

# Configuración de Django
DJANGO_DEBUG=1
DJANGO_SETTINGS_MODULE=api_project.settings
DJANGO_SECRET_KEY=your-secret-key-here

# Configuración de restart policy
RESTART_POLICY=unless-stopped

# Configuración de imágenes (para producción)
WEB_IMAGE=
API_IMAGE=